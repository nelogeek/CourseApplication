@{
    ViewData["Title"] = "Перечень заявок";
}

@using System.Security.Principal
@{
    WindowsIdentity currentIdentity = WindowsIdentity.GetCurrent();
    string userName = currentIdentity?.Name ?? "Неизвестно";
}

@model List<Student>



<div class="container-fluid">
    <div class="row mt-3">
        <div class="col">
            <div>
                <b>Новая заявка</b>
            </div>
            <div>
                <span class="user">Пользователь: @userName</span>
            </div>
        </div>
        <div class="col-auto text-center">
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Составить новую заявку</a>
        </div>
    </div>

    <hr />

    <div class="row mb-4 mt-2">
        <div class="col text-center">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Age</td>
                            <td>@student.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>